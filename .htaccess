RewriteEngine On

# Redirigir todas las peticiones a la carpeta public excepto archivos y directorios existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Configuraci√≥n de seguridad
<Files "*.php">
    Order Allow,Deny
    Allow from all
</Files>

# Prevenir acceso a archivos sensibles
<FilesMatch "\.(env|log|sql|md|txt)$">
    Order Allow,Deny
    Deny from all
</FilesMatch> 